@model SaleModel

@{
    ViewData["Title"] = "Confirm Sale";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="Customer.Id" />
            <input type="hidden" asp-for="Car.Id" />
            <div class="form-group">
                <label asp-for="Customer.Name"></label>
                <input asp-for="Customer.Name" readonly class="form-control"/>
                <span asp-validation-for="Customer.Name" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Make"></label>
                <input asp-for="Car.Make" readonly class="form-control"/>
                <span asp-validation-for="Car.Make" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discount"></label>
                <input asp-for="Discount" readonly class="form-control"/>
                <span asp-validation-for="Discount" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PriceWithDiscount"></label>
                <input asp-for="PriceWithDiscount" readonly class="form-control"/>
                <span asp-validation-for="PriceWithDiscount" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PriceWithoutDiscount"></label>
                <input asp-for="PriceWithoutDiscount" readonly class="form-control"/>
                <span asp-validation-for="PriceWithoutDiscount" class="form-text text-danger"></span>
            </div>
            <div>
                <a class="btn btn-success" href="/sales/add">Back</a>
                <input class="btn btn-success" type="submit" value="Finalize"/>
            </div>
        </form>
    </div>
</div>
