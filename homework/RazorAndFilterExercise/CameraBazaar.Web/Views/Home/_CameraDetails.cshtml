@model List<CameraModel>

<div class="col-md-12">
    <div>Cameras</div>
    @if (Model.Count > 0)
    {
        foreach (var camera in Model)
        {
            <div class="col-xs-6" style="padding: 15px; border: 1px solid black;">
                <div class="col-xs-3">
                    <img src="@camera.ImageUrl" alt="camera" width="70" height="50"/>
                </div>
                <div class="col-xs-3" style="padding: 10px;">
                    <div>@camera.Make @camera.Model</div>
                    <div><a href="/cameras/details?id=@camera.Id">Details</a>
                    </div>
                </div>
                <div class="col-xs-3" style="padding: 10px;">
                    <div>$@camera.Price.ToString("F2")</div>
                    <div style="color: @(camera.Stock == "IN STOCK" ? "green" : "red")">@camera.Stock</div>
                </div>
                <div class="col-xs-3" style="padding: 10px;">
                    <div><a href="#" class="btn btn-warning btn-sm">Edit</a>
                    </div>
                    <div><a href="#" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div>
            <p>The user is not selling any cameras.Go to <a href="/">home page</a> to find more offers of other users.
            </p>
        </div>
    }
</div>