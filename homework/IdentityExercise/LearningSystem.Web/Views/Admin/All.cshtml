@model AdminUserListingViewModel
@{
    ViewData["Title"] = "All Users";
}

<h2>All Users</h2>

<table class="table table-hover table-bordered">
    <thead>
    <tr>
        <th>Username</th>
        <th>Email</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>@user.Username</td>
            <td>@user.Email</td>
            <td>
                <form asp-controller="Admin" asp-action="AddToRole" method="post">
                    <div class="row">
                        <div class="col-md-8">
                            <input type="hidden" name="UserId" value="@user.Id" />
                            <select name="Role" asp-items="Model.Roles" class="form-control"></select>
                        </div>
                        <div class="col-md-4">
                            <input type="submit" value="Add Role" class="btn btn-success" />
                        </div>
                    </div>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
